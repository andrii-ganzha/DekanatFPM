@model DekanatFPM.Models.Group

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Group</h4>
    @for (int i = 1; i <= Model.Duration; i++)
    {
        if (Model.YearsIndividualPlans.Contains(i.ToString()))
        {
            <h3>@Html.ActionLink($"Редагувати індивідуальний план на {i}-й курс", "EditIndividualPlan", new { groupID = Model.GroupID, year = i })</h3>
        }
        else
        {
            <h3>@Html.ActionLink($"Додати індивідуальний план на {i}-й курс", "AddIndividualPlan", new { groupID = Model.GroupID, year = i })</h3>
        }
    }
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Шифр
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Спеціалізація
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Specialization.Name)
        </dd>
        <dt>Студенти</dt>

        <dd>
            @foreach (var s in ViewBag.Students)
            {
                <p>@s.Name</p>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.GroupID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
